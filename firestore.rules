rules_version = '2';

service cloud.firestore {
  match /databases/{db}/documents {

    // --- Helpers ---

    function isAuth() {
      return request.auth != null;
    }

    function userPath() {
      return /databases/$(db)/documents/users/$(request.auth.uid);
    }

    function isUserExists() {
      return exists(userPath());
    }

    function getRequesterRole() {
      return isAuth() && isUserExists() ? get(userPath()).data.role : null;
    }

    function isAdmin() {
      return getRequesterRole() == 'admin' || getRequesterRole() == 'super_admin';
    }

    function isSuperAdmin() {
      return getRequesterRole() == 'super_admin';
    }

    // --- Collection Rules ---

    // Users Collection
    match /users/{uid} {
      // READ: 
      // 1. User can read their own profile.
      // 2. Admins and Super Admins can list/read all profiles (for dashboards).
      allow read: if isAuth() && (request.auth.uid == uid || isAdmin());

      // CREATE:
      // Allow new users to sign up. Must set role to 'user' and not be an admin request yet.
      allow create: if isAuth() 
                    && request.auth.uid == uid 
                    && request.resource.data.role == "user"
                    && request.resource.data.adminRequest == false;

      // UPDATE:
      // 1. Super Admin can update anything (Roles, etc).
      // 2. User can update their own data (e.g. adminRequest) BUT CANNOT change their role.
      allow update: if isSuperAdmin() 
                    || (isAuth() && request.auth.uid == uid && request.resource.data.role == resource.data.role);
    }

    // Newsletters Collection
    match /newsletters/{id} {
      // Everyone can read published newsletters
      allow read: if resource.data.status == "published";
      
      // Admins and Super Admins can read all (drafts, etc)
      allow read: if isAdmin(); 

      // Admins/Super Admins can create, update, delete
      allow create, update, delete: if isAdmin(); 
    }

    // Subscriptions Collection
    match /subscriptions/{id} {
      // Users can manage their subscriptions (create, delete)
      // We allow 'write' (create/update/delete) as long as they own it.
      // Although strictly we might only need create/delete, 'setDoc' can look like an update.
      allow read: if (isAuth() && resource.data.userId == request.auth.uid) || isAdmin();
      allow write: if isAuth() && (request.resource.data.userId == request.auth.uid || resource.data.userId == request.auth.uid);
    }

    // Community Posts (Discussions)
    match /community_posts/{id} {
       // Anyone authenticated can read
       allow read: if isAuth();
       // Create: must be author
       allow create: if isAuth() && request.resource.data.authorId == request.auth.uid;
       // Update/Delete: Author or Admin
       allow update, delete: if isAuth() && (resource.data.authorId == request.auth.uid || isAdmin());
    }

    // Bookmarks (Saved Newsletters)
    match /bookmarks/{id} {
       // Users can only access their own bookmarks
       allow read: if isAuth() && resource.data.userId == request.auth.uid;
       allow write: if isAuth() && (request.resource.data.userId == request.auth.uid || resource.data.userId == request.auth.uid);
    }

    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

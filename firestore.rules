rules_version = '2';

service cloud.firestore {
  match /databases/{db}/documents {

    // --- Helpers ---

    function isAuth() {
      return request.auth != null;
    }

    // Fetch the requester's full user document
    function getRequesterData() {
      return get(/databases/$(db)/documents/users/$(request.auth.uid)).data;
    }

    function getRequesterRole() {
      return getRequesterData().role;
    }

    function isAdmin() {
      return isAuth() && (getRequesterRole() == 'admin' || getRequesterRole() == 'super_admin');
    }

    function isSuperAdmin() {
      return isAuth() && getRequesterRole() == 'super_admin';
    }

    // --- Collection Rules ---

    // Users Collection
    match /users/{uid} {
      // READ: 
      // 1. User can read their own profile.
      // 2. Admins and Super Admins can list/read all profiles (for dashboards).
      allow read: if isAuth() && (request.auth.uid == uid || isAdmin());

      // CREATE:
      // Allow new users to sign up. Must set role to 'user' and not be an admin request yet.
      allow create: if isAuth() 
                    && request.auth.uid == uid 
                    && request.resource.data.role == "user"
                    && request.resource.data.adminRequest == false;

      // UPDATE:
      // 1. Super Admin can update anything (Roles, etc).
      // 2. User can update their own data BUT CANNOT change their role.
      allow update: if isSuperAdmin() 
                    || (isAuth() && request.auth.uid == uid && request.resource.data.role == resource.data.role);
    }

    // Newsletters Collection
    match /newsletters/{id} {
      // Everyone can read published newsletters
      allow read: if resource.data.status == "published";
      
      // Admins and Super Admins can read all (drafts, etc)
      allow read: if isAdmin(); // Recursive 'read' allows getting single docs. List permissions implied by query constraints matching this.

      // Admins/Super Admins can create, update, delete
      allow create, update, delete: if isAdmin(); 
    }

    // Subscriptions Collection
    match /subscriptions/{id} {
      // Users can manage their own subscriptions
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      allow read, delete: if isAuth() && resource.data.userId == request.auth.uid;
    }

    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{db}/documents {

    // --- Helpers ---

    function isAuth() {
      return request.auth != null;
    }

    // Fetch the requester's full user document
    function getRequesterData() {
      return get(/databases/$(db)/documents/users/$(request.auth.uid)).data;
    }

    function getRequesterRole() {
      // Safely get role, default to 'user' if missing (though app ensures it exists)
      return getRequesterData().role;
    }

    function isAdmin() {
      return isAuth() && (getRequesterRole() == 'admin' || getRequesterRole() == 'super_admin');
    }

    function isSuperAdmin() {
      return isAuth() && getRequesterRole() == 'super_admin';
    }

    // --- Collection Rules ---

    // Users Collection
    match /users/{uid} {
      // READ: 
      // 1. User can read their own profile.
      // 2. Admins and Super Admins can list/read all profiles (for dashboards).
      allow read: if isAuth() && (request.auth.uid == uid || isAdmin());

      // CREATE:
      // Allow new users to sign up. Must set role to 'user' and not be an admin request yet.
      allow create: if isAuth() 
                    && request.auth.uid == uid 
                    && request.resource.data.role == "user"
                    && request.resource.data.adminRequest == false;

      // UPDATE:
      // 1. Super Admin can update anything (Roles, etc).
      // 2. User can update their own data (e.g. adminRequest) BUT CANNOT change their role.
      allow update: if isSuperAdmin() 
                    || (isAuth() && request.auth.uid == uid && request.resource.data.role == resource.data.role);
    }

    // Newsletters Collection
    match /newsletters/{id} {
      // Everyone can read published newsletters
      allow read: if resource.data.status == "published";
      
      // Admins and Super Admins can read all (drafts, etc)
      allow read: if isAdmin(); 

      // Admins/Super Admins can create, update, delete
      allow create, update, delete: if isAdmin(); 
    }

    // Subscriptions Collection
    match /subscriptions/{id} {
      // Users can manage their subscriptions
      allow create: if isAuth() && request.resource.data.userId == request.auth.uid;
      // Allow reading/deleting own subscriptions
      // Admins/SuperAdmin can read all for dashboard stats
      allow read: if (isAuth() && resource.data.userId == request.auth.uid) || isAdmin();
      allow delete: if isAuth() && resource.data.userId == request.auth.uid;
    }

    // [NEW] Audit Logs Collection (Super Admin Only)
    match /auditLogs/{id} {
      // Only Super Admin can read/write logs
      // Note: We allow 'create' because standard Admins might trigger audit events too 
      // if we expand later, but for now Super Admin Logic handles it.
      // If your app logic writes logs from client for Admin actions, use isAdmin().
      // Based on current code: SuperAdminUsers/Roles pages write logs.
      allow read: if isSuperAdmin();
      allow create: if isSuperAdmin(); // Strict: Only Super Admin actions are logged client-side for now
    }

    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
